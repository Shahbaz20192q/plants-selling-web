<form
  class="add-product-page"
  action="/products/edit/<%= product._id %>"
  enctype="multipart/form-data"
  method="post"
>
  <div class="add-product-form">
    <h2 class="heading">General Information</h2>
    <div class="group">
      <label for="page-title">Page Title</label>
      <input
        type="text"
        id="page-title"
        placeholder="Page Title"
        name="pageTitle"
        value="<%= product.pageTitle %>"
      />
    </div>

    <div class="group">
      <label for="product-name">Product Name</label>
      <input
        type="text"
        id="product-name"
        placeholder="Enter Product name"
        name="productName"
        value="<%= product.productName %>"
      />
    </div>
    <div class="price-category">
      <div class="group">
        <label for="category">Select Category</label>
        <select name="category" id="category">
          <% categories.forEach(category => { %>
            <option <%= product.category === category.categoryName ? 'selected' : '' %> value="<%= category.categoryName %>">
              <%= category.categoryName %>
            </option>
          <% }) %>
        </select>
      </div>
      <div class="group">
        <label for="price">Price</label>
        <input
          type="number"
          id="price"
          placeholder="Price"
          name="price"
          value="<%= product.price %>"
        />
      </div>
    </div>

    <div class="group">
      <label for="editor">Description</label>
      <textarea name="productDescription" id="editor" cols="30" rows="10">
<%= product.productDescription %></textarea
      >
    </div>
    <div class="group">
      <label for="meta-description">Meta Description</label>
      <input
        id="meta-description"
        type="text"
        placeholder="Enter Meta Description"
        name="productmetaDescription"
        value="<%= product.productmetaDescription %>"
      />
    </div>
    <div class="group">
      <label for="meta-Keywords">Meta Keywords</label>
      <input
        id="meta-Keywords"
        type="text"
        placeholder="Enter Meta keywords"
        name="metaKeywords"
        value="<%= product.metaKeywords %>"
      />
    </div>

    <input type="submit" value="Update Product" class="btn" />
  </div>

  <aside class="add-product-side">
    <div class="upload__box">
      <div class="upload__btn-box">
        <label class="upload__btn">
          <p>Chose images</p>
          <input
            type="file"
            multiple=""
            name="images"
            data-max_length="20"
            class="upload__inputfile"
          />
        </label>
      </div>
      <div class="upload__img-wrap">
        <div
          class="upload__img-box"
          style="display: flex; flex-wrap: wrap; gap: 10px"
        >
          <% product.images.forEach(image => { %>
          <img
            style="width: 100px"
            src="/images/products/<%= image %>"
            alt=""
          />
          <% }) %>
        </div>
      </div>
    </div>
  </aside>
</form>
